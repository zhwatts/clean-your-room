{
  "name": "clean-your-room-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "client": "npm run dev --workspace=packages/client",
    "server": "npm run server:dev --workspace=packages/server",
    "dev": "concurrently \"npm run client\" \"npm run server\"",
    "build": "npm run build --workspace=packages/client && npm run build --workspace=packages/server"
  },
  "devDependencies": {
    "concurrently": "^8.0.0"
  },
  "version": "1.0.0",
  "license": "ISC"
}
